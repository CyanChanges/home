---
import {MdPrimaryTab} from "@material/web/tabs/primary-tab";

const {to, class: className, ...props} = Astro.props;

const {pathname} = Astro.url;
const isActive = to === pathname || to === pathname.replace(/\/$/, '');
---

<MdPrimaryTab active={isActive} data-href={to} class:list={[className]}>
  <slot/>
</MdPrimaryTab>

